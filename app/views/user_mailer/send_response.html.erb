<table style="width: 100%; background-color: #FFFFFF; text-align: center;">
    <tbody>
        <tr>
            <td>
                <!-- Header Section -->
                <table style="width: 100%; background-color: #141E3D; max-width: 500px; margin: 0 auto;">
                    <tbody>
                        <tr>
                            <td style="padding: 20px 0; color: #fff; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; text-align: center;">
                                <p style="font-size: 22px; font-weight: bold;">
                                    <%= @lang['h1'] %>
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <!-- Feedback Section -->
                <table style="width: 100%; max-width: 500px; margin: 0 auto;">
                    <tbody>
                        <tr>
                            <td style="padding: 15px 10px; color: #555555; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; text-align: center;">
                                <p style="font-size: 24px; font-weight: bold;"><%= raw(@lang['p1']) %>:</p>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: center; padding: 0 10px 30px 10px;">
                                <a href="<%= @response_url %>" target="_blank" style="display: inline-block; background-color: #85C440; color: #ffffff; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-size: 16px;"><%= @lang['cta'] %></a>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <!-- Footer Section -->
                <table style="width: 100%; background-color: #141E3D; max-width: 500px; margin: 0 auto;">
                    <tbody>
                        <tr>
                            <td style="padding: 10px; color: #ccc; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; text-align: center;">
                                <p style="font-size: 12px;"><strong><%= Time.current.year %> | CIEB</strong></p>
                            </td>
                        </tr>
                    </tbody>
                </table>


                <!-- Disclaimer Section -->
                <table style="width: 100%; background-color: #F7F7F7; max-width: 500px; margin: 0 auto;">
                    <tbody>
                        <tr>
                            <td style="padding: 10px; color: #555555; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; text-align: left;font-size: 12px;">
                                <div>
                                    <%= raw(@lang['disclaimer1']) %>
                                </div>
                                <br />
                                <div style="font-style:italic;">
                                    <%= raw(@lang['disclaimer2']) %>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </td>
        </tr>
    </tbody>
</table>